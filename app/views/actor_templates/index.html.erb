<h1>
  List of all actors
</h1>

<form action="/insert_actor_record" method="post">
  <div>
    <label for="actor_name">Name</label>
    <input id="actor_name" type="text" name="the_actor">
  </div>

  <div>
    <label for="dob_field">Dob</label>
    <input id="dob_field" type="date" name="actor_dob">
  </div>

  <div>
    <label for="bio">Bio</label>
    <textarea id="bio" rows="3" name="actor_bio"></textarea>
  </div>

  <div>
    <label for="actor_image">Image</label>
    <input id="actor_image" type="text" name="actor_image">
  </div>

  <button>
    Create actor
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
